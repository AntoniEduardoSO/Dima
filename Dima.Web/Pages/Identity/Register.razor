@page "/comecar"
@layout HeadlessLayout
<PageTitle>Dima - Cadastrar</PageTitle>


<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Elevation="10" Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/dima.png" alt="Dima - Controle financeiro" width="200" />
            </div>

            <MudForm @ref="_mudForm">
                <DataAnnotationsValidator />
                <MudTextField T="string" Label="E-mail" Required="true" InputType="InputType.Email"
                    RequiredError="Informe o E-mail"
                    Validation="@(new EmailAddressAttribute {ErrorMessage="Email inválido"})" />

                <MudTextField T="string" Label="Senha" InputType="InputType.Password" Required=true
                    RequiredError="Senha invalida" />
            </MudForm>

            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary">Começar</MudButton>
                <MudSpacer/>
                <MudButton Href="/login">Já possuo uma conta</MudButton>
            </div>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;

}
